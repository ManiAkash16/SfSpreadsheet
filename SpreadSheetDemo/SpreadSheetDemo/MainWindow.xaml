<Window xmlns:syncfusion="http://schemas.syncfusion.com/wpf"  x:Class="SpreadSheetDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpreadSheetDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <StackPanel>
        <!--add SfSpreadsheet and SfSpreadsheetRibbon control and give 
        SfSpreadsheet as dataContext to SfSpreadsheetRibbon-->
        <syncfusion:SfSpreadsheetRibbon Height="auto" Width="750" Margin="20"
            DataContext="{Binding ElementName=spreadsheet}" />
        <syncfusion:SfSpreadsheet x:Name="spreadsheet" Height="450" Width="750"/>
    </StackPanel>
</Window>
